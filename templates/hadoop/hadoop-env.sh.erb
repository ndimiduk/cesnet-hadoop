# Set Hadoop-specific environment variables here.

# The only required environment variable is JAVA_HOME.  All others are
# optional.  When running a distributed configuration it is best to
# set JAVA_HOME in this file, so that it is correctly defined on
# remote nodes.

# The java implementation to use.
export JAVA_HOME="<%= scope['hadoop::environment']['JAVA_HOME'] || '${JAVA_HOME}' %>"
<% if scope['hadoop::environment']['HADOOP_HOME'] -%>
export HADOOP_HOME="${HADOOP_HOME:-<%= scope['hadoop::environment']['HADOOP_HOME'] %>}"
<% else -%>
export HADOOP_HOME="${HADOOP_HOME:-/usr/hdp/current/hadoop-client}"
<% end -%>

# The jsvc implementation to use. Jsvc is required to run secure datanodes
# that bind to privileged ports to provide authentication of data transfer
# protocol.  Jsvc is not required if SASL is configured for authentication of
# data transfer protocol using non-privileged ports.
<% if scope['hadoop::environment']['JSVC_HOME'] -%>
export JSVC_HOME="<%= scope['hadoop::environment']['JSVC_HOME'] %>"
<% end -%>

export HADOOP_CONF_DIR=${HADOOP_CONF_DIR:-"<%= scope['hadoop::confdir'] %>"}

# Extra Java CLASSPATH elements.  Automatically insert capacity-scheduler.
for f in $HADOOP_HOME/contrib/capacity-scheduler/*.jar; do
  if [ "$HADOOP_CLASSPATH" ]; then
    export HADOOP_CLASSPATH=$HADOOP_CLASSPATH:$f
  else
    export HADOOP_CLASSPATH=$f
  fi
done

# The maximum amount of heap to use, in MB. Default is 1000.
<% if scope['hadoop::environment']['HADOOP_HEAPSIZE'] -%>
export HADOOP_HEAPSIZE="<%= scope['hadoop::environment']['HADOOP_HEAPSIZE'] %>"
<% end -%>
<% if scope['hadoop::environment']['HADOOP_NAMENODE_INIT_HEAPSIZE'] -%>
export HADOOP_NAMENODE_INIT_HEAPSIZE="<%= scope['hadoop::environment']['HADOOP_NAMENODE_INIT_HEAPSIZE'] %>"
<% end -%>

# Extra Java runtime options.  Empty by default.
<% if scope['hadoop::environment']['HADOOP_OPTS'] -%>
export HADOOP_OPTS="$HADOOP_OPTS <%= scope['hadoop::environment']['HADOOP_OPTS'] %>"
<% else -%>
export HADOOP_OPTS="$HADOOP_OPTS -Djava.net.preferIPv4Stack=true"
<% end -%>

# Command specific options appended to HADOOP_OPTS when specified
<% if scope['hadoop::environment']['HADOOP_NAMENODE_OPTS'] -%>
export HADOOP_NAMENODE_OPTS="<%= scope['hadoop::environment']['HADOOP_NAMENODE_OPTS'] %> ${HADOOP_NAMENODE_OPTS}"
<% else -%>
export HADOOP_NAMENODE_OPTS="-Dhadoop.security.logger=${HADOOP_SECURITY_LOGGER:-INFO,RFAS} -Dhdfs.audit.logger=${HDFS_AUDIT_LOGGER:-INFO,NullAppender} ${HADOOP_NAMENODE_OPTS}"
<% end -%>
<% if scope['hadoop::environment']['HADOOP_DATANODE_OPTS'] -%>
export HADOOP_DATANODE_OPTS="<%= scope['hadoop::environment']['HADOOP_DATANODE_OPTS'] %> ${HADOOP_DATANODE_OPTS}"
<% else -%>
export HADOOP_DATANODE_OPTS="-Dhadoop.security.logger=ERROR,RFAS $HADOOP_DATANODE_OPTS"
<% end -%>

<% if scope['hadoop::environment']['HADOOP_SECONDARYNAMENODE_OPTS'] -%>
export HADOOP_SECONDARYNAMENODE_OPTS="<%= scope['hadoop::environment']['HADOOP_SECONDARYNAMENODE_OPTS'] %> ${HADOOP_SECONDARYNAMENODE_OPTS}"
<% else -%>
export HADOOP_SECONDARYNAMENODE_OPTS="-Dhadoop.security.logger=${HADOOP_SECURITY_LOGGER:-INFO,RFAS} -Dhdfs.audit.logger=${HDFS_AUDIT_LOGGER:-INFO,NullAppender} ${HADOOP_SECONDARYNAMENODE_OPTS}"
<% end -%>

<% if scope['hadoop::environment']['HADOOP_NFS3_OPTS'] -%>
export HADOOP_NFS3_OPTS="<%= scope['hadoop::environment']['HADOOP_NFS3_OPTS'] %>"
<% else -%>
export HADOOP_NFS3_OPTS="$HADOOP_NFS3_OPTS"
<% end -%>
<% if scope['hadoop::environment']['HADOOP_PORTMAP_OPTS'] -%>
export HADOOP_PORTMAP_OPTS="<%= scope['hadoop::environment']['HADOOP_PORTMAP_OPTS'] %> $HADOOP_PORTMAP_OPTS"
<% else -%>
export HADOOP_PORTMAP_OPTS="-Xmx512m $HADOOP_PORTMAP_OPTS"
<% end -%>

# The following applies to multiple commands (fs, dfs, fsck, distcp etc)
<% if scope['hadoop::environment']['HADOOP_CLIENT_OPTS'] -%>
export HADOOP_CLIENT_OPTS="<%= scope['hadoop::environment']['HADOOP_CLIENT_OPTS'] %> $HADOOP_CLIENT_OPTS"
<% else -%>
export HADOOP_CLIENT_OPTS="-Xmx512m $HADOOP_CLIENT_OPTS"
<% end -%>
#HADOOP_JAVA_PLATFORM_OPTS="-XX:-UsePerfData $HADOOP_JAVA_PLATFORM_OPTS"

# On secure datanodes, user to run the datanode as after dropping privileges.
# This **MUST** be uncommented to enable secure HDFS if using privileged ports
# to provide authentication of data transfer protocol.  This **MUST NOT** be
# defined if SASL is configured for authentication of data transfer protocol
# using non-privileged ports.
<% if scope['hadoop::environment']['HADOOP_SECURE_DN_USER'] -%>
export HADOOP_SECURE_DN_USER="<%= scope['hadoop::environment']['HADOOP_SECURE_DN_USER'] %>"
<% else -%>
export HADOOP_SECURE_DN_USER=${HADOOP_SECURE_DN_USER}
<% end -%>

# Where log files are stored.  $HADOOP_HOME/logs by default.
<% if scope['hadoop::environment']['HADOOP_LOG_DIR'] -%>
export HADOOP_LOG_DIR="<%= scope['hadoop::environment']['HADOOP_LOG_DIR'] %>"
<% else -%>
export HADOOP_LOG_DIR="<%= scope['hadoop::log_base'] %>/${USER}"
<% end -%>
<% if scope['hadoop::environment']['HADOOP_MAPRED_LOG_DIR'] -%>
export HADOOP_MAPRED_LOG_DIR="<%= scope['hadoop::environment']['HADOOP_MAPRED_LOG_DIR'] %>"
<% else -%>
export HADOOP_MAPRED_LOG_DIR="<%= scope['hadoop::log_base'] %>/${USER}"
<% end -%>

# Where log files are stored in the secure data environment.
<% if scope['hadoop::environment']['HADOOP_SECURE_LOG_DIR'] -%>
export HADOOP_SECURE_DN_LOG_DIR="<%= scope['hadoop::environment']['HADOOP_SECURE_LOG_DIR'] %>"
<% else -%>
export HADOOP_SECURE_DN_LOG_DIR="<%= scope['hadoop::log_base'] %>/<%= scope['hadoop::hdfs_user'] %>"
<% end -%>

###
# HDFS Mover specific parameters
###
# Specify the JVM options to be used when starting the HDFS Mover.
# These options will be appended to the options specified as HADOOP_OPTS
# and therefore may override any similar flags set in HADOOP_OPTS
#
<% if scope['hadoop::environment']['HADOOP_MOVER_OPTS'] -%>
export HADOOP_MOVER_OPTS="<%= scope['hadoop::environment']['HADOOP_MOVER_OPTS'] %>"
<% end -%>

###
# Advanced Users Only!
###

# The directory where pid files are stored. /tmp by default.
# NOTE: this should be set to a directory that can only be written to by 
#       the user that will run the hadoop daemons.  Otherwise there is the
#       potential for a symlink attack.
export HADOOP_PID_DIR="<%= scope['hadoop::pid_base'] %>/${USER}"
export HADOOP_MAPRED_PID_DIR="<%= scope['hadoop::pid_base'] %>/${USER}"
export HADOOP_SECURE_DN_PID_DIR="<%= scope['hadoop::pid_base'] %>/${USER}"

# A string representing this instance of hadoop. $USER by default.
<% if scope['hadoop::environment']['HADOOP_IDENT_STRING'] -%>
export HADOOP_IDENT_STRING="<%= scope['hadoop::environment']['HADOOP_IDENT_STRING'] %>"
<% else -%>
export HADOOP_IDENT_STRING=$USER
<% end -%>

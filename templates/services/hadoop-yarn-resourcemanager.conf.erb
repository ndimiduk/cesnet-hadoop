description "yarn-resourcemanager"

#
# based on instructions from http://docs.hortonworks.com/HDPDocuments/HDP2/HDP-2.3.4/bk_installing_manually_book/content/format_and_start_hdfs.html
#

start on runlevel [2345]
stop on runlevel [016]

respawn
respawn limit 5 60

kill timeout 300

# actually start resource manager
pre-start exec sudo -u <%= scope.lookupvar('hadoop::yarn_user') %> /bin/bash /usr/hdp/current/hadoop-yarn-resourcemanager/sbin/yarn-daemon.sh --config <%= scope.lookupvar('hadoop::confdir') %> start resourcemanager

#
# upstart executes this script. If this script exits, upstart respawns the service
# cannot just excecute *-daemon.sh here, because the actual daemon script excecutes after start
#   and upstart thinks service is stopped so respawns *-daemon.sh constantly.
#
script
  while ps auwx | grep proc_resourcemanager | grep -q -v grep; do
    sleep 5
  done
end script

post-stop exec sudo -u <%= scope.lookupvar('hadoop::yarn_user') %> /bin/bash /usr/hdp/current/hadoop-yarn-resourcemanager/sbin/yarn-daemon.sh --config <%= scope.lookupvar('hadoop::confdir') %> stop resourcemanager
